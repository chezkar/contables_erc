{% extends 'base.html.twig' %}

{% block title_button %}
    <h1 class="h3 mb-0 text-gray-800">Clientes</h1>
    <a href="{{ path('cliente_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-user-plus fa-sm text-white-50"></i> Nuevo</a>
{% endblock %}

{% block body %}
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>NIT</th>
                <th>Nombres</th>
                <th>Nombre Comercial</th>
                <th>Dirección Comercial</th>
                <th>Teléfonos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                <td>{{ cliente.clienteNit }}</td>
                <td>{{ cliente.clienteNombre }} {{ cliente.clienteApellido }}</td>
                <td>{{ cliente.clienteNombreComercial }}</td>
                <td>{{ cliente.Clientedireccioncomercial }}</td>
                <td>{{ cliente.clienteTelefonoParticular }}{{ cliente.clienteTelefonoComercial ? " | " ~ cliente.clienteTelefonoComercial : ''  }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cliente_show', { 'idcliente': cliente.idcliente }) }}">VER</a>
                        </li>
                        <li>
                            <a href="{{ path('cliente_edit', { 'idcliente': cliente.idcliente }) }}">EDITAR</a>
                        </li>
                        <li>
                            <a href="{{ path('activo_index', { 'idcliente': cliente.idcliente }) }}">AGREGAR ACTIVOS</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
